@{
	Layout = "";
	var agreementText = ViewBag.AgreementText as string;
}

<div class="media">
	<img class="media-object img-fluid pr-2" src="@Url.Content("~/Plugins/SmartStore.Flutterwave/Content/branding.png")" alt="@T("Plugins.FriendlyName.Payments.Flutterwave")" />
	<div class="media-body ml-3">
		<div>
			@Html.Raw(T("Plugins.SmartStore.Flutterwave.PaymentInfo"))
		</div>

		<div class="mt-2">
			<div class="form-check">
				<input type="checkbox" id="UseAndAgreeToThirdPartyTerms" name="UseAndAgreeToThirdPartyTerms" class="form-check-input" />
				<label for="UseAndAgreeToThirdPartyTerms" class="form-check-label">
					@Html.Raw(agreementText.NaIfEmpty())
				</label>
			</div>
		</div>
	</div>
</div>
